<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="cone-show-card">
        <h1><%= @cone.name %></h1>
        <p class="cone-show-location"><%= @cone.location %></p>
      </div>
      <div class="cone-show-card">
        <h3>A bit more about this cone...</h3>
        <p><%= @cone.description %></p>
        <div class="map"></div>
      </div>
    </div>

    <div class="col-4">
      <div class="cone-show-card">
        <h5>Book this cone</h5>

        <form action="">
          <div class="input-group">
            <span class="input-group-text" id="start-date-label">From:</span>
            <input type="text" class="form-control">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-text" id="end-date-label">To:</span>
            <input type="text" class="form-control">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>
      </div>
      <div class="cone-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <%= @cone.condition %>
          </div>
          <div class="flex ms-3">
            $<%= @cone.price %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
