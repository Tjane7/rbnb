<div class="container">
  <div class="row">
    <div class="col-12 col-lg-6">
      <div class="card">
        <h1><%= @cone.name %></h1>
      </div>
    </div>
    <div class="col-12 col-lg-6">
      <div class="card bg-light">

      </div>
    </div>
  </div>
</div>

<div class="cone-card">
<h2><center><%= @cone.description %></center></h2>
<p>Condition: <%= @cone.condition %></p>
<p>Quantity: <%= @cone.quantity %></p>
<p>Price: <%= @cone.price %></p>
<% if @cone.photo.attached? %>
  <%= cl_image_tag cone.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>
 <%= link_to "Book it", booking_path, class: "btn btn-flat" %>
 </div>
