<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-8">
      <div class="cone-show-card">
        <h1><%= @cone.name %></h1>
        <p><%= @cone.description %></p>
      </div>
      <div class="cone-show-card">
        <div><img src="cone.png"></div>
      </div>
    </div>

    <div class="col-4">
      <div class="cone-show-card">
        <h3 class="pt-2">Details</h3>
        <div class="infos pt-2">
          <div class="flex">
              <p><strong>Condition: </strong><%= @cone.condition %></p>
          </div>
          <div class="flex">
              <p><strong>Price: </strong>$<%= @cone.price %></p>
          </div>
        </div>
          <%= link_to "BOOK NOW", new_cone_booking_path(@cone), class: "btn btn-flat"%>
      </div>
    </div>
  </div>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
